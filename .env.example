# --- Application ---
NODE_ENV=development
APP_NAME=Leo Pass
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
PORT=3000

# --- Database ---
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/leopass?schema=public
DATABASE_DIRECT_URL=postgresql://postgres:postgres@postgres:5432/leopass

# --- Redis / Queues ---
REDIS_URL=redis://redis:6379
BULLMQ_PREFIX=leopass

# --- Security ---
SESSION_SECRET=__REPLACE__
CF_TURNSTILE_SITE_KEY=__REPLACE__
CF_TURNSTILE_SECRET_KEY=__REPLACE__
WEB_PUSH_VAPID_PUBLIC_KEY=__REPLACE__
WEB_PUSH_VAPID_PRIVATE_KEY=__REPLACE__
WEB_PUSH_VAPID_SUBJECT=mailto:privacy@eventurelk.com

# --- Email Providers ---
# ZeptoMail Sandbox (choose SMTP or API path)
ZEPTO_SMTP_HOST=smtp.zeptomail.com
ZEPTO_SMTP_PORT=587
ZEPTO_SMTP_USER=__REPLACE__
ZEPTO_SMTP_PASS=__REPLACE__
ZEPTO_API_KEY=__REPLACE__
ZEPTO_MAILAGENT_ALIAS=__REPLACE__

# Brevo fallback (Transactional)
BREVO1_API_KEY=__REPLACE__
BREVO1_SMTP_HOST=smtp-relay.brevo.com
BREVO1_SMTP_PORT=587
BREVO1_SMTP_USER=__REPLACE__
BREVO1_SMTP_PASS=__REPLACE__

# Zoho Campaigns (Bulk) + Brevo 2 fallback
ZOHO_CAMPAIGNS_API_KEY=__REPLACE__
BREVO2_API_KEY=__REPLACE__

# --- Monitoring & Telemetry ---
SENTRY_DSN=__REPLACE__
UPTIME_KUMA_URL=http://localhost:3001
UPTIME_KUMA_API_KEY=__REPLACE__
PROMETHEUS_SCRAPE_NODE=true

# --- Backups (Oracle Cloud Object Storage) ---
OCI_NAMESPACE=__REPLACE__
OCI_REGION=ap-mumbai-1
OCI_S3_ENDPOINT=https://${OCI_NAMESPACE}.compat.objectstorage.${OCI_REGION}.oraclecloud.com
OCI_S3_ACCESS_KEY=__REPLACE__
OCI_S3_SECRET_KEY=__REPLACE__
OCI_BUCKET=leo-prod-backups
BACKUP_CRON=0 2 * * *

# --- Feature Flags / Defaults ---
ENABLE_PUSH_NOTIFICATIONS=true
RSVP_WALK_INS=true
GEOFENCE_DEFAULT_METERS=100
AUTO_CHECKOUT_MINUTES=10
MULTI_SESSION_DEFAULT=false

# --- CI / Tooling ---
CI_NODE_VERSION=20
CI_RUN_E2E=true

# --- Local Development ---
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Leo Pass
VITE_CF_TURNSTILE_SITE_KEY=__REPLACE__
VITE_SENTRY_DSN=
VITE_WEB_PUSH_VAPID_PUBLIC_KEY=__REPLACE__
